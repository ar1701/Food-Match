<% layout("./layouts/boilerplate.ejs") %>

<body>
  <div class="row mt-3">
    <h2 class="col-6 offset-3">SignUp for WanderLust</h2>
    <div class="col-6 offset-3">
      <form
        action="/signup"
        method="POST"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label
            for="username"
            class="form-label"
            >Username</label
          >
          <input
            type="text"
            name="username"
            placeholder
            id="username"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks Good</div>
        </div>
        <div class="mb-3">
          <label
            for="email"
            class="form-label"
            >E-mail</label
          >
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks Good</div>
        </div>
        <div class="mb-3">
          <label
            for="password"
            class="form-label"
            >Password</label
          >
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks Good</div>
        </div>
        <button class="btn btn-success">Sign Up</button>
      </form>
    </div>
  </div>
</body>
