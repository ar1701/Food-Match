<% layout("./layouts/boilerplate.ejs") %>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit Your Listing:-</h2>
            <form action="/listings/<%= data._id %>/edit?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Food Title:</label>
                    <input type="text" name="list[title]" value="<%=data.title%>"class="form-control" required>
                    <div class="valid-feedback">Title Looks Good</div>
                </div>
                
                <div class="mb-3">
                    <label for="des">Ingredients:</label>
                    <textarea type="text" name="list[ingredients]" placeholder="<%=data.ingredients%>"class="form-control" required></textarea>
                    <div class="invalid-feedback">Enter a nice description</div>
                </div>
                
                <div class="mb-3">
                    <label for="img">Upload Food Image:</label>
                    <input type="file" name="list[image]"
                        id="img" class="form-control" required>
                </div>
                
                <div class="mb-3">
                    <label for="price">Instruction for Cooking:</label>
                    <textarea type="text" name="list[instructions]" value="<%=data.instructions%>"class="form-control" required></textarea>
                    <div class="invalid-feedback">Instruction</div>
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="loc">Servings:</label>
                        <input type="number" name="list[servings]" value="<%=data.servings%>"class="form-control" required>
                        <div class="invalid-feedback">Serving</div>
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <label for="country">Which Country's Food:</label>
                        <input type="text" name="list[country]" value="<%=data.country%>"class="form-control" required>
                        <div class="invalid-feedback">Country</div>
                    </div>
                </div>
               
                
                <button class="btn btn-dark add-btn mt-3 mb-4">Update</button>
            </form>
        </div>
       
    </div>
   
</body>
