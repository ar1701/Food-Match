<% layout("./layouts/boilerplate.ejs") %>

<body>
    <br><br>
    <h2 class="offset-2">Add Your Own Recipe:</h2>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <form action="/listings/new" method="post" class="needs-validation"
                novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Food Title:</label>
                    <input type="text" name="list[title]"
                        placeholder="Enter Title"
                        id="title" class="form-control" required>
                    <div class="valid-feedback">Title Looks Good</div>
                </div>

                <div class="mb-3">
                    <label for="des">Ingredients:</label>
                    <textarea type="text" name="list[ingredients]"
                        placeholder="Enter Ingredients" id="des"
                        class="form-control" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="img">Upload Food Image:</label>
                    <input type="file" name="list[image]"
                        id="img" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="price">Instruction for Cooking:</label>
                    <textarea type="number" name="list[instructions]"
                        placeholder="Write Here!"
                        id="price" class="form-control" required></textarea>
                    <div class="invalid-feedback">Instruction</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="loc">Servings:</label>
                        <input type="number" name="list[servings]"
                            placeholder="" id="loc"
                            class="form-control" required>
                        <div class="invalid-feedback">Serving</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country">Which Country's Food:</label>
                        <input type="text" name="list[country]"
                            placeholder="Country"
                            id="counter" class="form-control" required>
                        <div class="invalid-feedback">country</div>
                    </div>
                </div>

                <button class="btn btn-dark add-btn">Add</button>
                <br><br>
            </form>
        </div>
    </div>

</body>
